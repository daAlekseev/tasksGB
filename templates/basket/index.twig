{% extends 'layout.twig' %}

{% block title %}MyApp / Basket{% endblock %}
{% block content %}
    {% for good in goods %}
        <li>{{ good.title }} | ${{ good.price }} | {{ good.count }} шт. | ${{ good.sum }}</li>
    {% endfor %}
    <div><b>${{ sum }}</b></div>
    <a href="/order">Оформить заказ</a>
{% endblock %}